{% block javascripts %}
    {{ parent() }}
    <!-- BEGIN GRAFICOS HIGHSTOCK LEVEL PLUGINS -->
    <script src="{{ asset('easyadmin/plugins/highstock/code/highstock.js') }}"></script>
    <script src="{{ asset('easyadmin/plugins/highstock/code/modules/annotations.js') }}"></script>
    <script src="{{ asset('easyadmin/plugins/highstock/code/modules/exporting.js') }}"></script>
    <script src="{{ asset('easyadmin/plugins/highstock/code/modules/export-data.js') }}"></script>
    <script src="{{ asset('easyadmin/plugins/highstock/code/modules/export-clientside.js') }}"></script>
    <!-- END  GRAFICOS HIGHSTOCK LEVEL PLUGINS -->
    <script src="{{ asset('easyadmin/plantilla1/js/waypoints.min.js') }}"></script>
    <script src="{{ asset('easyadmin/plantilla1/js/counterup.min.js') }}"></script>
    <script src="{{ asset('easyadmin/tema/select2/select2.full.min.js') }}"></script>
    <script>
        $(document).ready(function () {

            (function () {
                {% if not (app.session.get('aprobarEstimadoOtrosGastos')) and is_granted("ROLE_DISTRIBUIDOR_DIVISION") %}
                window.location.href = "{{ path('login') }}";
                {% else %}
                {% for nivel in app.user.nivelAccesos() if nivel == 'ESTIMADO_OTROS_GASTOS' %}
                {% else %}
                window.location.href = "{{ path('login') }}";
                {% endfor %}
                {% endif %}
            })();

            // jQuery counterUp
            $('[data-toggle="counter-up"]').counterUp({
                delay: 10,
                time: 1000
            });

            $('#otroGasto').select2({
                placeholder: 'Seleccione ...',
                allowClear: true
            });

            //--------- abandonar el formulario -----------------
            $('.salir').on('click', function () {
                window.location.href = "{{ path('inicio') }}";

            });

            $('#btnAtrasDivision').on("click", function () {
                window.location.href = "{{ path('gestionarEstimadoPlanOtrosGastos') }}";
            });

            //funciones de asigancion del presupuesto por divisiones

            //Declaracion de variables
            let totalEstimadoPresupuestoOtroGasto = [];
            let totalEstimadoPresupuestoOtroGastoMes = [];
            let montoRestante = 0;
            let montoRestanteDivision = 0;
            let montoTotal = 0;
            let montoAnterior = 0;
            let otroGasto = '';
            let idOtroGasto = '';
            let n;
            let estimadoMes = 0;
            let restanteMes = 0;

            //Arreglo para el grafico de presupuesto asignado por Categorias del plan de Otros Gastos activo
            {% for graficoTotal in graficosTotalesEstimadosOtrosGastos %}
                    totalEstimadoPresupuestoOtroGasto.push({
                        name: '{{ graficoTotal['nombre'] }}',
                        y: parseInt('{{ graficoTotal['totalOtroGasto'] }}')
                    });
            {% endfor %}

            (function () {
                graficoTotalEstimadoOtroGasto();
            })();

            //Cargar el presupuesto estimado de la nomenclador seleccionada
            function cargarOtroGasto(categoria, presupuesto, colorSeleccionado) {

                //mostrar el total del presupuesto
                {% for otro in otrosGastos %}
                        otroGasto = '{{ otro.nombre }}';
                        if (otroGasto === categoria) {
                            {% if aprobarEstimadoOtroGasto == false %}
                            $('#otroGasto').val('{{ otro.id }}');
                            {% endif %}
                            idOtroGasto = {{ otro.id }};
                        }
                {% endfor %}

                {% if aprobarEstimadoOtroGasto == false %}
                    $('#totalPresupuestoDivision').val(presupuesto);
                    montoAnterior = parseInt(presupuesto);
                    $('#otroGasto').prop("disabled", true);
                    $('.AsignarDivisionOtroGasto').prop("disabled", true);
                    $('.ModificarDivisionOtroGasto').prop("disabled", false);
                    $('.AprobarDivisionOtroGasto').prop("disabled", false);

                {% else %}

                //mostrar si existe el grafico mensual

                $('#nameMontoEstimado').text(Highcharts.numberFormat(presupuesto, 0, '.', ','));

                $(".preload").removeClass('hidden');

                var mat_datos = {
                    idPlanEstimado: {{ planEstimado }},
                    otroGasto: idOtroGasto
                };

                $.ajax({
                    type: "POST",
                    dataType: "json",
                    url: '{{ path("graficoOtroGastoEstimadoMensual") }}',
                    data: mat_datos
                }).done(function (data) {

                    $(".preload").addClass('hidden');
                    var obj = JSON.parse(data);

                    totalEstimadoPresupuestoOtroGastoMes = [];
                    for (n = 0; n < obj.length; n++) {
                        totalEstimadoPresupuestoOtroGastoMes.push({
                            name: obj[n]['mes'],
                            y: parseFloat(obj[n]['totalOtroGasto']),
                            color: colorSeleccionado
                        });
                    }

                    estimadoMes = Math.floor(parseInt(presupuesto) / 12);
                    restanteMes = Math.floor(parseInt(presupuesto) - (estimadoMes * 12));

                    if (totalEstimadoPresupuestoOtroGastoMes.length === 0) {
                        $('#nameMontoRestanteDivision').text(Highcharts.numberFormat(presupuesto, 0, '.', ','));
                        $('#nameTabDivisionMes').text('PRESUPUESTO ESTIMADO POR MESES - ' + (categoria));
                        $('#nameMontoRestanteMostrar').css("display", "none");
                        $('#nameMontoRestanteDivisionMostrar').css("display", "block");
                        $('#totalDivisionMes').css("display", "block");
                        $('.mesesDivision').prop("placeholder", estimadoMes);
                        $('.AplicarDivisionMes').prop("disabled", false);
                    } else {
                        $('#nameMontoRestanteDivision').text(0);
                        $('#nameMontoRestanteMostrar').css("display", "block");
                        $('#nameMontoRestanteDivisionMostrar').css("display", "none");
                        $('#totalDivisionMes').css("display", "none");
                        $('.AplicarDivisionMes').prop("disabled", true);
                        graficoTotalEstimadoOtroGastoMes();
                    }

                    montoRestanteDivision = parseInt(presupuesto);
                });
                {% endif %}
            }

             $('.AplicarDivisionMes').on('click', function () {
                if (estimadoMes !== 0) {
                    $('.mesesDivision').prop("value", estimadoMes);
                    $('.AplicarDivisionMes').prop("disabled", true);
                    $('#nameMontoRestanteDivision').text(Highcharts.numberFormat(restanteMes, 0, '.', ','));
                    if (restanteMes === 0) {
                        $('.AprobarDivisionMes').prop("disabled", false);
                    }
                }
            });

            //Grafico general Total presupuesto Estimado por nomencladores
            function graficoTotalEstimadoOtroGasto() {
                var valorMax = totalEstimadoPresupuestoOtroGasto.length - 1;
                var valorScrollbar = false;
                if (totalEstimadoPresupuestoOtroGasto.length > 6) {
                    valorMax = 5;
                    valorScrollbar = true;
                }
                Highcharts.chart('graficoOtroGasto', {
                    chart: {
                        type: 'column'
                    },
                    title: {
                        text: null
                    },
                    exporting: {
                        enabled: false
                    },
                    scrollbar: {
                        enabled: valorScrollbar,
                        liveRedraw: true,
                        step: 1
                    },
                    xAxis: {
                        type: 'category',
                        min: 0,
                        max: valorMax,
                        useHTML: true
                    },
                    yAxis: {
                        title: {
                            text: 'Total de presupuesto estimados',
                            useHTML: true
                        }

                    },
                    legend: {
                        enabled: false
                    },
                    plotOptions: {
                        series: {
                            borderWidth: 0,
                            allowPointSelect: true,
                            cursor: 'pointer',
                            getExtremesFromAll: true,
                            dataLabels: {
                                enabled: true,
                                formatter: function () {
                                    return Highcharts.numberFormat(this.y, 0, ',', '.');
                                }
                            }
                        }
                    },
                    tooltip: {
                        headerFormat: '<span style="font-size:11px">{series.name}</span><br>',
                        pointFormat: '<span style="color:{point.color}">{point.name}</span>' + ' presupuesto asignado ' + '<b>{point.y:,.0f}</b>'
                    },

                    "series": [
                        {
                            "name": "Total de presupuesto",
                            "colorByPoint": true,
                            "data": totalEstimadoPresupuestoOtroGasto,
                            events: {
                                click: function (oEvent) {
                                    cargarOtroGasto(oEvent.point.name, oEvent.point.y, oEvent.point.color);
                                }
                            }
                        }
                    ],
                    responsive: {
                        rules: [{
                            condition: {
                                maxWidth: 500
                            },
                            chartOptions: {
                                scrollbar: {
                                    enabled: true
                                },
                                xAxis: {
                                    min: 0,
                                    max: 1,
                                    useHTML: true
                                }
                            }
                        }]
                    }
                });
            }

            $('.AsignarDivisionOtroGasto').on('click', function () {

                if ($("#otroGasto").val() === '0') {
                    alertify.alert('<strong>El servicio es obligatoria, no puede quedar en blanco.</strong>')
                        .setHeader('<span class="glyphicon glyphicon-ban-circle" style="font-size: 20px"></span>' +
                            '<h4 class="modal-title" style="display: inline-block; margin-left: 10px">Error</h4>')
                        .set('label', 'Aceptar');
                    return false;
                }

                if ($("#totalPresupuestoDivision").val() === '') {
                    alertify.alert('<strong>El presupuesto es obligatorio, no puede quedar en blanco.</strong>')
                        .setHeader('<span class="glyphicon glyphicon-ban-circle" style="font-size: 20px"></span>' +
                            '<h4 class="modal-title" style="display: inline-block; margin-left: 10px">Error</h4>')
                        .set('label', 'Aceptar');
                    return false;
                }

                montoRestante = {{ totalPresupuestoEstimadoOtroGasto - totalEstimadoOtroGasto }};

                if (parseInt($("#totalPresupuestoDivision").val()) > montoRestante) {
                    alertify.alert('<strong>El presupuesto no puede ser mayor que el total restante.</strong>')
