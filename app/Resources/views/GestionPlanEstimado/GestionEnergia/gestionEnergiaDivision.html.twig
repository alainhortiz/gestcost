{% block javascripts %}
    {{ parent() }}
    <!-- BEGIN GRAFICOS HIGHSTOCK LEVEL PLUGINS -->
    <script src="{{ asset('easyadmin/plugins/highstock/code/highstock.js') }}"></script>
    <script src="{{ asset('easyadmin/plugins/highstock/code/modules/annotations.js') }}"></script>
    <script src="{{ asset('easyadmin/plugins/highstock/code/modules/exporting.js') }}"></script>
    <script src="{{ asset('easyadmin/plugins/highstock/code/modules/export-data.js') }}"></script>
    <script src="{{ asset('easyadmin/plugins/highstock/code/modules/export-clientside.js') }}"></script>
    <!-- END  GRAFICOS HIGHSTOCK LEVEL PLUGINS -->
    <script src="{{ asset('easyadmin/plantilla1/js/waypoints.min.js') }}"></script>
    <script src="{{ asset('easyadmin/plantilla1/js/counterup.min.js') }}"></script>
    <script src="{{ asset('easyadmin/tema/select2/select2.full.min.js') }}"></script>
    <script>
        $(document).ready(function () {

            (function () {
                {% if not (app.session.get('aprobarEstimadoEnergia')) and is_granted("ROLE_DISTRIBUIDOR_DIVISION") %}
                window.location.href = "{{ path('login') }}";
                {% else %}
                {% for nivel in app.user.nivelAccesos() if nivel == 'ESTIMADO_ENERGIA' %}
                {% else %}
                window.location.href = "{{ path('login') }}";
                {% endfor %}
                {% endif %}
            })();

            // jQuery counterUp
            $('[data-toggle="counter-up"]').counterUp({
                delay: 10,
                time: 1000
            });

            //--------- abandonar el formulario -----------------
            $('.salir').on('click', function () {
                window.location.href = "{{ path('inicio') }}";

            });

            $('#btnAtrasDivision').on("click", function () {
                window.location.href = "{{ path('gestionarEstimadoPlanEnergiasDivision') }}";
            });

            //funciones de asigancion del presupuesto por divisiones

            //Declaracion de variables
            let nameDivision = [];
            let meses = [];
            let totalEstimadoPresupuestoEnergiaDivision = [];
            let totalEstimadoKWDivision = [];
            let totalEstimadoPresupuestoEnergiaDivisionMes = [];
            let totalEstimadoKWDivisionMes = [];
            let montoRestante = 0;
            let montoRestanteDivision = 0;
            let montoTotal = 0;
            let montoAnterior = 0;
            let divisionCentroCosto = '';
            let idDivisionCentroCosto = '';
            let precio = 0;
            let presupuesto = 0;
            let n;
            let estimadoMes = 0;
            let restanteMes = 0;

            //Arreglo para el grafico de presupuesto asignado por Categorias del plan de Energia activo
            {% for graficoTotal in graficosTotalesEstimadosDivisionesEnergias %}
                    nameDivision.push('{{ graficoTotal['nombre'] }}');
                    totalEstimadoPresupuestoEnergiaDivision.push(parseFloat({{ graficoTotal['totalEnergiaPresupuesto'] }}));
                    totalEstimadoKWDivision.push(parseInt({{ graficoTotal['totalKWDivision'] }}));
            {% endfor %}

            (function () {
                graficoTotalEstimadoEnergiaDivision();
            })();

            //Cargar el presupuesto estimado de la division seleccionada
            function cargarDivision(categoria, presupuesto, colorSeleccionado) {

                //mostrar el total del presupuesto
                {% for division in divisionCentrosCostos %}
                divisionCentroCosto = '{{ division.nombre }}';
                if (divisionCentroCosto === categoria) {
                    {% if aprobarEstimadoEnergiaDivision == false %}
                    $('#categoriaCentroCosto').val('{{ division.id }}');
                    {% endif %}
                    idDivisionCentroCosto = {{ division.id }};
                }
                {% endfor %}

                {% if aprobarEstimadoEnergiaDivision == false %}
                $('#totalPresupuestoDivision').val(presupuesto);
                montoAnterior = parseInt(presupuesto);
                $('#categoriaCentroCosto').prop("disabled", true);
                $('.AsignarDivisionEnergia').prop("disabled", true);
                $('.ModificarDivisionEnergia').prop("disabled", false);
                $('.AprobarDivisionEnergia').prop("disabled", false);

                {% else %}

                //mostrar si existe el grafico mensual

                $('#nameMontoEstimado').text(Highcharts.numberFormat(presupuesto, 0, '.', ','));

                $(".preload").removeClass('hidden');

                var mat_datos = {
                    idPlanEstimado: {{ planEstimado }},
                    division: idDivisionCentroCosto
                };

                $.ajax({
                    type: "POST",
                    dataType: "json",
                    url: '{{ path("graficoEnergiaEstimadoDivisionMensual") }}',
                    data: mat_datos
                }).done(function (data) {

                    $(".preload").addClass('hidden');
                    var obj = JSON.parse(data);

                    meses = [];
                    totalEstimadoPresupuestoEnergiaDivisionMes = [];
                    totalEstimadoKWDivisionMes = [];
                    for (n = 0; n < obj.length; n++) {
                        meses.push(obj[n]['mes']);
                        totalEstimadoPresupuestoEnergiaDivisionMes.push(parseFloat(obj[n]['totalEnergiaPresupuesto']));
                        totalEstimadoKWDivisionMes.push(parseInt(obj[n]['totalKWDivisionMes']));
                    }

                    estimadoMes = Math.floor(parseInt(presupuesto) / 12);
                    restanteMes = Math.floor(parseInt(presupuesto) - (estimadoMes * 12));

                    if (totalEstimadoPresupuestoEnergiaDivisionMes.length === 0) {
                        $('#nameMontoRestanteDivision').text(Highcharts.numberFormat(presupuesto, 0, '.', ','));
                        $('#nameTabDivisionMes').text('KW ESTIMADO POR MESES - ' + (categoria));
                        $('#nameMontoRestanteMostrar').css("display", "none");
                        $('#nameMontoRestanteDivisionMostrar').css("display", "block");
                        $('#totalDivisionMes').css("display", "block");
                        $('.mesesDivision').prop("placeholder", estimadoMes);
                        $('.AplicarDivisionMes').prop("disabled", false);
                    } else {
                        $('#nameMontoRestanteDivision').text(0);
                        $('#nameMontoRestanteMostrar').css("display", "block");
                        $('#nameMontoRestanteDivisionMostrar').css("display", "none");
                        $('#totalDivisionMes').css("display", "none");
                        $('.AplicarDivisionMes').prop("disabled", true);
                        graficoTotalEstimadoEnergiaDivisionMes();
                    }

                    montoRestanteDivision = parseInt(presupuesto);
                });
                {% endif %}
            }

            $('.AplicarDivisionMes').on('click', function () {
                if (estimadoMes !== 0) {
                    $('.mesesDivision').prop("value", estimadoMes);
                    $('.AplicarDivisionMes').prop("disabled", true);
                    $('#nameMontoRestanteDivision').text(Highcharts.numberFormat(restanteMes, 0, '.', ','));
                    if (restanteMes === 0) {
                        $('.AprobarDivisionMes').prop("disabled", false);
                    }
                }
            });

            //Grafico general Total presupuesto Estimado por divisiones
            function graficoTotalEstimadoEnergiaDivision() {
                var valorMax = totalEstimadoKWDivision.length - 1;
                var valorScrollbar = false;
                if (totalEstimadoKWDivision.length > 6) {
                    valorMax = 5;
                    valorScrollbar = true;
                }
                Highcharts.chart('graficoDivisionEnergia', {
                    chart: {
                        type: 'column'
                    },
                    title: {
                        text: null
                    },
                    exporting: {
                        enabled: false
                    },
                    scrollbar: {
                        enabled: valorScrollbar,
                        liveRedraw: true,
                        step: 1
                    },
                    xAxis: {
                        categories: nameDivision,
                        min: 0,
                        max: valorMax,
                        useHTML: true
                    },
                    yAxis: {
                        title: {
                            text: 'Total de kW estimados',
                            align: 'middle',
                            useHTML: true
                        },
                        stackLabels: {
                            enabled: true,
                            style: {
                                fontWeight: 'bold'
                            }
                        }
                    },
                    legend: {
                        enabled: false
                    },
                    plotOptions: {
                        column: {
                            stacking: 'percent',
                            dataLabels: {
                                enabled: true
                            }
                        },
                        series: {
                            borderWidth: 0,
                            allowPointSelect: true,
                            cursor: 'pointer',
                            dataLabels: {
                                enabled: true,
                                formatter: function () {
                                    return Highcharts.numberFormat(this.y, 0, '.', ',');
                                }
                            }
                        }
                    },
                    tooltip: {
                        headerFormat: '<span style="font-size:11px"><b>{point.x}</b></span><br>',
                        pointFormat: '<span style="color:{point.color}">{series.name}</span>: <b>{point.y:,.0f}</b>'
                    },

                    "series": [
                        {
                            "name": "Total de kW",
                            "data": totalEstimadoKWDivision,
                            events: {
                                click: function (oEvent) {
                                    cargarDivision(oEvent.point.category, oEvent.point.y, oEvent.point.color);
                                }
                            }
                        },
                        {
                            "name": "Total de presupuesto",
                            "data": totalEstimadoPresupuestoEnergiaDivision
                        }
                    ],
                    responsive: {
                        rules: [{
                            condition: {
                                maxWidth: 500
                            },
                            chartOptions: {
                                scrollbar: {
                                    enabled: true
                                },
                                xAxis: {
                                    min: 0,
                                    max: 1,
                                    useHTML: true
                                }
                            }
                        }]
                    }
                });
            }

            $('.AsignarDivisionEnergia').on('click', function () {

                if ($("#categoriaCentroCosto").val() === '0') {
                    alertify.alert('<strong>La división es obligatoria, no puede quedar en blanco.</strong>')
                        .setHeader('<span class="glyphicon glyphicon-ban-circle" style="font-size: 20px"></span>' +
                            '<h4 class="modal-title" style="display: inline-block; margin-left: 10px">Error</h4>')
                        .set('label', 'Aceptar');
                    return false;
                }

                if ($("#totalPresupuestoDivision").val() === '') {
