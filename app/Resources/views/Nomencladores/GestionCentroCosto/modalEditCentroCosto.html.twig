<div id="modalEditCentroCosto" data-backdrop="static" data-keyboard=false class="modal fade" tabindex="-1"
     aria-hidden="true">
    <div class="modal-dialog" style="width: 50vw">
        <div class="modal-content portlet light estilosForm">
            <div class="modal-header">
                <div class="caption font-green">
                    <i class="icon-settings font-green-sunglo"></i>
                    <span class="bold uppercase" style="font-size: 17px"> MODIFICAR CENTRO COSTO</span>
                </div>
            </div>
            <div class="modal-body">
                <div class="scroller" style="height: 255px" data-always-visible="1" data-rail-visible1="1">
                    <div class="row">
                        <div class="portlet-body form">
                            <form class="form-horizontal" role="form">
                                <div class="form-body">
                                    <div class="form-group">
                                        <label class="col-lg-3 col-md-3 col-sm-3 control-label">División</label>
                                        <div class="col-lg-8 col-md-8 col-sm-8">
                                            <div class="input-group input-icon right">
												<span class="input-group-addon">
												<i class="fa fa-circle-o"></i>
												</span>
                                                <i style="color: #dc141b ; margin-right: 10px"
                                                   class="fa fa-exclamation tooltips hidden  editCategoria"
                                                   data-placement="bottom"
                                                   data-original-title="Este campo es obligatorio"></i>
                                                <select class="form-control input-group-sm" id="editCategoria"
                                                        name="editCategoria">
                                                    {% for division in  divisionCentrosCostos %}
                                                        <option value="{{ division.id }}">{{ division.nombre }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-3 col-md-3 col-sm-3 control-label">Código</label>
                                        <div class="col-lg-8 col-md-8 col-sm-8">
                                            <div class="input-group input-icon right">
												<span class="input-group-addon">
												<i class="fa fa-tag"></i>
												</span>
                                                <i style="color: #dc141b"
                                                   class="fa fa-exclamation tooltips hidden editCodigo"
                                                   data-placement="bottom"
                                                   data-original-title="Este campo es obligatorio"></i>
                                                <input type="text" class="form-control" placeholder="Teclee el código"
                                                       id="editCodigo" name="editCodigo">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-3 col-md-3 col-sm-3 control-label">Nombre</label>
                                        <div class="col-lg-8 col-md-8 col-sm-8">
                                            <div class="input-group input-icon right">
												<span class="input-group-addon">
												<i class="fa fa-comment"></i>
												</span>
                                                <i style="color: #dc141b"
                                                   class="fa fa-exclamation tooltips hidden editNombre"
                                                   data-placement="bottom"
                                                   data-original-title="Este campo es obligatorio"></i>
                                                <input type="text" class="form-control" placeholder="Teclee el nombre"
                                                       id="editNombre" name="editNombre">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-3 col-md-3 col-sm-3 control-label">Provincia</label>
                                        <div class="col-lg-8 col-md-8 col-sm-8">
                                            <div class="input-group input-icon right">
												<span class="input-group-addon">
												<i class="fa fa-circle-o"></i>
												</span>
                                                <i style="color: #dc141b ; margin-right: 10px"
                                                   class="fa fa-exclamation tooltips hidden  editProvincia"
                                                   data-placement="bottom"
                                                   data-original-title="Este campo es obligatorio"></i>
                                                <select class="form-control input-group-sm" id="editProvincia"
                                                        name="editProvincia">
                                                    {% for provincia in  provincias %}
                                                        <option value="{{ provincia.id }}">{{ provincia.nombre }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-8 col-md-8 col-sm-8" style="margin-left: 25%">
                                            <div class="md-checkbox" >
                                                <input type="checkbox" id="editActivo" class="md-check">
                                                <label for="editActivo">
                                                    <span></span>
                                                    <span class="check"></span>
                                                    <span class="box"></span>
                                                    ACTIVO </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" data-dismiss="modal" class="btn default cerrar">Cerrar</button>
            <button type="button" class="btn btn-secondary" id="editGuardar">Guardar</button>
        </div>
    </div>
</div>
