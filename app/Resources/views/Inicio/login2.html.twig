        <p id="profile-name" class="profile-name-card text-center" >SISTEMA INTEGRAL PARA LA GESTIÓN DE COSTOS DE LOS CENTROS Y SERVICIOS DE ECODIC</p>

        <form class="form-signin" id="loginForm" action="{{ path('login_check') }}" method="post">
            <span id="reauth-email" class="reauth-email"></span>
            {% if error %}
                <div class="alert alert-danger">
                    <button class="close" data-close="alert"></button>
                    <strong>Credenciales Inválidas. </strong>
                </div>
            {% endif %}
            <label for="loginInpUser" style="margin-top: 30px ; margin-bottom: 10px">
                    <span class="cf-i-container">
                        <i class="fas fa-user-circle"></i>
                    </span>
                Usuario
            </label>

            <input type="text" id="loginInpUser" name="_username"  class="form-control" placeholder="Usuario" required autofocus>

            <label for="loginInpPassword" style="margin-bottom: 10px">
                    <span class="cf-i-container">
                        <i class="fas fa-lock"></i>
                    </span>
                Contraseña
            </label>

            <input type="password" id="loginInpPassword" class="form-control" placeholder="Contraseña" name="_password" autocomplete="off" required>

            {#<div id="remember" class="custom-control custom-checkbox mb-3 mr-sm-2">
